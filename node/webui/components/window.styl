@import '../node_modules/bootstrap-styl/bootstrap/glyphicons.styl'

window
  position: fixed;
  background-color: #fafaf0;

  border-radius: 10px;

  overflow: hidden

  box-shadow:
    3px 4px 16px -6px black,
    0px 0px 2px 0px black // Soft border

  .win-content
    position: relative
    display: inline-block
    width: 100%
    // set by JS because we need to deal with topbar and
    // 100% would make the box to big <_<
    //height: 100%

    overflow: scroll

    & > *
      position: absolute

  &[not-decorated]
    border-radius: 0px
    box-shadow: none
    .win-topbar, .win-closebtn, .win-resizebtn
      display: none

  .win-topbar
    background: linear-gradient(to bottom, #ffffff 0%,#f6f6f6 47%,#ededed 100%)
    height: 35px

    padding-top: 7px
    text-align: center

    border-bottom: 1px solid #888

    > *
      display: inline

  .win-closebtn
    display: block
    position: absolute
    background: transparent
    border: none

    @extend .glyphicon
    @extend .glyphicon-remove

    font-size: 1.1em

    top: 10px
    left: 5px

  .win-resizebtn
    position: absolute
    right: -8px
    bottom: -8px
    top: initial

    width: 30px
    height: 30px

    color: rgba(0,0,0,0.6)

    border: none
    background: none

    @extend .glyphicon
    @extend .glyphicon-th

    font-size: 1.3em
